# Environment configuration
ENVIRONMENT=development  # development, staging, production

# Supabase Configuration (for auth and remote database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key

# Database Configuration
# For production/staging: Use Supabase database URL
# For local development: Use local PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/aipocket_local

# Supabase Database String (for production/staging)
SUPABASE_DB_STRING=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Development specific
DEV_ENV=dev

# Local Database Configuration (when ENVIRONMENT=development)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=aipocket_local
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=postgres